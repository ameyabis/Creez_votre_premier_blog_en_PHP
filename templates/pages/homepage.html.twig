{% extends "base.html.twig" %}

{% block title %}
Jérémy.G - Accueil
{% endblock %}

{% block body %}

<body>
    <section class="py-3">
        <div class="d-flex flex-column justify-content-center">
            <h1 class="d-flex justify-content-center">Bienvenue</h1>
            <img class="image-pres img-fluid" src="{{ root_directory~'/src/image/presentation/post-le-debut.jpg' }}" alt="">
        </div>
    </section>
    <section class="py-3">
        <div class=" container mt-3">
            <h1 class="d-flex justify-content-center">Projet</h1>
            <div class="container d-flex justify-content-between">
                {% for post in posts %}
                <div class="card" style="width: 20rem;">
                    <img src="{{ root_image~post.image }}" class="card-img-top"
                        alt="Le début d'une passion">
                    <div class="card-body">
                        <div class="d-flex flex-column justify-content-center">
                            <h2 class="card-title d-flex justify-content-center">{{ post.title }}</h2>
                            <h3 class="card-subtitle d-flex justify-content-center">{{ post.chapo }}</h3>
                            <p class="card-text text-justify">{{ post.description }}</p>
                            <a href="?page=post&id={{ post.id }}" class="btn btn-primary d-flex justify-content-center">Go to post</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="bg-light py-3">
        <div class="container">
            <h1 class="d-flex justify-content-center">Présentation</h1>
            <div class="d-flex">
                <p class="mx-3 text-justify">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Nobis, saepe? Magnam natus ullam nobis
                    similique
                    magni nihil dolorum doloribus explicabo unde. Provident, error laboriosam. Reiciendis, temporibus.
                    Quidem
                    harum sequi beatae.
                </p>
                <img src="{{ root_directory~'/src/image/presentation/img-pres.jpeg' }}" alt="">
            </div>
        </div>
    </section>
</body>
{% endblock body %}