{% extends "base.html.twig" %}

{% block body %}

<body>
    <div class="container mt-3">
        <h1 class="d-flex justify-content-center">Projet</h1>
        <div class="container d-flex flex-wrap justify-content-between">
            {% for post in posts %}
            <div class="card my-3" style="width: 20rem;">
                <img src="{{ root_directory~'/src/image/post-le-debut.jpg' }}" class="card-img-top"
                    alt="Le dÃ©but d'une passion">
                <div class="card-body">
                    <h2 class="card-title d-flex justify-content-center">{{ post.title }}</h2>
                    <h3 class="card-subtitle d-flex justify-content-center">{{ post.chapo }}</h3>
                    <p class="card-text text-justify">{{ post.description }}</p>
                    <a href="?page=post&id={{ post.id }}" class="btn btn-primary d-flex justify-content-center">Plus d'information</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</body>
{% endblock body %}